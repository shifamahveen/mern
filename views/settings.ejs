<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Settings - Language Preferences</title>
  <link href="/css/styles.css" rel="stylesheet">
</head>
<body class="bg-gray-100 p-4">
  <!-- navbar -->
  <nav class="bg-gray-800 p-4">
    <ul class="flex space-x-4">
      <li><a href="/" class="text-white">Home</a></li>
      <li><a href="/profile" class="text-white">Profile</a></li>
      <% if (user && user.role !== 'user') { %>  
        <li><a href="/admin" class="text-white">Admin</a></li>
      <% } %>
      <li><a href="/logout" class="text-white">Logout</a></li>
    </ul>
  </nav>

  <div class="max-w-lg mx-auto bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-bold mb-4">Language Preferences</h1>
    
    <form action="/settings" method="POST" class="space-y-4">
        <div>
        <h2 class="text-lg font-semibold">Select your preferred languages:</h2>
        <div class="grid grid-cols-2 gap-2">
          <% availableLanguages.forEach(language => { %>
            <label class="block">
              <input type="checkbox" name="languages" value="<%= language.code %>" 
              <% if (userLanguages.includes(language.code)) { %> checked <% } %> >
              <%= language.name %>
            </label>
          <% }) %>
        </div>
      </div>

      <div>
        <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded">Save Preferences</button>
      </div>
    </form>
  </div>
</body>
</html>